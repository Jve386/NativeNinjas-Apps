<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/teal_700"
    tools:context="com.nativeninjas.vista.Premios">

    <TextView
        android:id="@+id/txtPremios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PREMIOS"
        android:textColor="#000"
        android:textSize="34dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp">
    </TextView>

    <ImageView
        android:id="@+id/imgPremios"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/txtPremios"
        android:src="@drawable/logonativeninjas"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="154dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPremios"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnCamiseta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#0000ff"
        android:text="Camiseta"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="437dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPremios"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/stockCamiseta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000"
        android:textSize="34dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="437dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPremios"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="340dp"></TextView>

    <Button
        android:id="@+id/btnGorra"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#0000ff"
        android:text="Gorra"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="521dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCamiseta"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/stockGorra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000"
        android:textSize="34dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="521dp"
        app:layout_constraintTop_toBottomOf="@+id/stockCamiseta"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="340dp"></TextView>

    <Button
        android:id="@+id/btnLlavero"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#0000ff"
        android:text="Llavero"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="607dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGorra"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/stockLlavero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000"
        android:textSize="34dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="607dp"
        app:layout_constraintTop_toBottomOf="@+id/stockGorra"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="340dp">></TextView>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#0000ff"
        android:text="Salir"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="607dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLlavero"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>